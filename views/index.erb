
<div class="row">
  <h2>Listes existantes</h2>
  <% @lists.each do |list| %>
    <a class="btn btn-default" href="http://<%= @domain %>/cgi-bin/mailman/listinfo/<%= list.name %>" role="button"><%= list.name %></a>
  <% end %>
</div>

<hr/>

<div class="row">
  <form method="post">
    <h2>Créer une nouvelle liste</h2>
    <div class="form-group">
      <input type="text" class="form-control" id="listName" name="listName" placeholder="Nom de la nouvelle liste">
    </div>
    <div class="form-group row">
      <div class="col-md-4">
      <% 
        i = 0
        @members.each do |member| 
      %>
        <div class="checkbox">
          <label>
            <input checked="checked" name="members[]" type="checkbox" value="<%= member %>">
            <%= member %>
          </label>
        </div>
      <%
          i += 1
          if i%10 == 0
          %> </div><div class="col-md-4"> <%
          end
        end
      %>
      </div>
    </div>
    <a href="#" class="selectAll btn btn-default">Tous</a>
    <a href="#" class="deselectAll btn btn-default">Aucun</a>
    <button type="submit" class="btn btn-default btn-primary">Créer la liste</button>
  </form>
</div>
